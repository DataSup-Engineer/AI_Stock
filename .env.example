# NASDAQ Stock Agent - Environment Configuration Template
# Copy this file to .env and update with your actual values

# =============================================================================
# REQUIRED: Anthropic API Configuration
# =============================================================================
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-haiku-20240307

# =============================================================================
# MongoDB Configuration
# =============================================================================
# Local development (no authentication)
MONGODB_URL=mongodb://localhost:27017/
MONGODB_DATABASE=nasdaq_stock_agent

# Production MongoDB Authentication (for docker-compose.prod.yml)
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=change_this_secure_root_password
MONGO_USERNAME=nasdaq_user
MONGO_PASSWORD=change_this_secure_user_password

# =============================================================================
# Application Configuration
# =============================================================================
APP_NAME=NASDAQ Stock Agent
APP_VERSION=1.0.0
DEBUG=false
HOST=0.0.0.0
PORT=8000

# =============================================================================
# Cache Configuration
# =============================================================================
CACHE_TTL_SECONDS=300

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_RETENTION_DAYS=30

# =============================================================================
# Rate Limiting Configuration
# =============================================================================
RATE_LIMIT_REQUESTS=100
MAX_CONCURRENT_REQUESTS=50

# =============================================================================
# YFinance Configuration
# =============================================================================
YFINANCE_TIMEOUT=30

# =============================================================================
# MCP Server Configuration (Optional)
# =============================================================================
MCP_ENABLED=false
MCP_HOST=localhost
MCP_PORT=8001

# =============================================================================
# NEST Framework Configuration - NANDA Registry Integration
# =============================================================================
NEST_ENABLED=false
NEST_AGENT_ID=nasdaq-stock-agent
NEST_AGENT_NAME=NASDAQ Stock Agent
NEST_PORT=6000

# IMPORTANT: Replace with your actual public IP or domain for production
NEST_PUBLIC_URL=http://YOUR_PUBLIC_IP:6000

# Registry URLs
NEST_REGISTRY_URL=http://registry.chat39.com:6900
NEST_MCP_REGISTRY_URL=

# NEST Features
NEST_TELEMETRY=true
NEST_DUAL_MODE=false

# Agent Metadata
NEST_DOMAIN=financial analysis
NEST_SPECIALIZATION=NASDAQ stock analysis and investment recommendations
NEST_CAPABILITIES=stock_analysis,technical_analysis,fundamental_analysis,investment_recommendations,market_data
NEST_EXPERTISE=NASDAQ stock analysis,Technical indicators (RSI MACD Moving Averages),Fundamental analysis (P/E EPS Revenue),Market sentiment analysis,Investment recommendations (BUY SELL HOLD),Risk assessment,Portfolio optimization
NEST_SYSTEM_PROMPT=You are an expert NASDAQ stock analysis agent. Your role is to provide comprehensive data-driven investment analysis and recommendations for NASDAQ-listed stocks.
NEST_VERSION=1.0.0
NEST_DESCRIPTION=AI-powered stock analysis agent providing comprehensive investment analysis for NASDAQ stocks

# =============================================================================
# Setup Instructions
# =============================================================================
# 1. Copy this file: cp .env.example .env
# 2. Update ANTHROPIC_API_KEY with your actual API key
# 3. For production: Update MongoDB passwords
# 4. For NEST: Update NEST_PUBLIC_URL with your public IP/domain
# 5. Adjust other settings as needed for your environment
